/*
20. Programa que lê os modelos de 5 carros e seus consumos (km/l).
Mostra:
(a) o carro mais econômico;
(b) quantos litros cada carro consome em 1000 km.
*/

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    char modelos[5][50];   // Nomes dos carros com 49 caracteres + '\0'
    float consumo[5];      // Consumo em km/l
    float litros[5];       // Litros para 1000 km
    int i;
    int maisEconomico = 0; // Índice do carro mais econômico

    printf("==============================================\n");
    printf("CADASTRO DE CONSUMO DE CARROS\n");
    printf("==============================================\n\n");

    // Leitura dos dados
    for (i = 0; i < 5; i++)
    {
        printf("Digite o modelo do carro %d: ", i + 1);
        fgets(modelos[i], sizeof(modelos[i]), stdin);

        // Remove o '\n' do fgets
        modelos[i][strcspn(modelos[i], "\n")] = '\0';

        printf("Digite o consumo (km/l) do %s: ", modelos[i]);
        scanf("%f", &consumo[i]);
        getchar(); // Limpa o buffer

        if (consumo[i] > consumo[maisEconomico])
        {
            maisEconomico = i;
        }
    }

    // Cálculo dos litros para 1000 km
    for (i = 0; i < 5; i++)
    {
        litros[i] = 1000.0 / consumo[i];
    }

    // Exibição dos resultados
    printf("\n==============================================\n");
    printf("RESULTADOS\n");
    printf("==============================================\n");

    printf("\n(a) Carro mais economico: %s (%.2f km/l)\n",
           modelos[maisEconomico], consumo[maisEconomico]);

    printf("\n(b) Consumo para percorrer 1000 km:\n");

    for (i = 0; i < 5; i++)
    {
        printf("- %s consome %.2f litros\n", modelos[i], litros[i]);
    }

    printf("==============================================\n");

    system("pause");
    return 0;
}
